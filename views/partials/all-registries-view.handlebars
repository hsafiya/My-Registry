{{!-- partial for all registries view --}}
<article>
    <div>

        <p> Registry name: {{title}} </p>
        <p> Owner: {{user.username}} </p>
        <p>
            {{#each categories}}
            Category: {{category_name}}
            {{/each}}
        </p>
        {{#if event_date}}
        <p>Event Date: {{event_date}}</p>
        {{else}}
        <p>This event does not have a specific date</p>
        {{/if}}
        
    </div>
</article>