<div class="panel all-registries" >
    <p class="panel-heading">
        All registries
    </p>
    <div class="panel-block field has-addons is-centered">
        <p class="control has-icons-left is-expanded">
            <input class="input" id="reg-search" type="text" placeholder="Search">
            <span class="icon is-left">
                <i class="fas fa-search" aria-hidden="true"></i>
            </span>
        </p>
        <div class="control">
            <button type="submit" class="button is-danger" id="reg-search-btn">Search</button>
        </div>
    </div>
    <p class="panel-tabs">
        <a class="categ-choice" href="/registries/" class="is-active" id="all">All</a>
        <a class="categ-choice" href="/registries/wedding-registries" id="wed">Wedding</a>
        <a class="categ-choice" href="/registries/birthday-registries" id="bday">Birthday</a>
        <a class="categ-choice" href="/registries/baby-shower-registries" id="bshower">Baby Shower</a>
        <a class="categ-choice" href="/registries/xmas-registries" id="xmas">Secret Santa</a>
    </p>
    {{#if registries.length}}
    {{#each registries }}
    <a class="panel-block">
        <span class="panel-icon">
            <i class="fas fa-book" aria-hidden="true"></i>
        </span>
        {{>all-registries-view}}
    </a>
    {{/each}}


    {{else}}
    <a class="panel-block">
        <span class="panel-icon">
            <i class="fas fa-exclamation-triangle" aria-hidden="true"></i>
        </span>
           No Registries found. 
        <span class="panel-icon">
            <i class="fas fa-exclamation-triangle" aria-hidden="true"></i>
        </span>
    </a>
    
    {{/if}}
</div>

{{>footer}}

<script src="/javascript/registries-page.js"></script>